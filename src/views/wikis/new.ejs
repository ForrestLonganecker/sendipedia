<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>

  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="main-container">
      <% include ../static/partials/messages.ejs %>

      <div class="new-wiki-back">
        <h2 class="bold">New Wiki</h2>
        <a class="standard-link" href="/wikis">Back</a>
      </div>

      <form class="wiki-container new-wiki-form" action="/wikis/<%= currentUser.isPremium() || currentUser.isAdmin() ? 'createPrivate' : 'create' %>" method="post">
        <label class="wiki-input-label bold" for="title">Wiki title</label>
        <div class="wiki-input-container">
          <input  class="new-wiki-input" type="text" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>  
        <label class="wiki-input-label bold" for="body">Wiki body</label>
        <textarea  class="new-wiki-textarea" type="text" name="body" aria-describedby="bodyHelp" placeholder="Enter Body"></textarea>
        <% if(currentUser.isPremium() || currentUser.isAdmin()){ %>
          <label class="bold wiki-raido-label" for="private">Make Wiki Private</label>
          <div class="wiki-radio-container radio-container">
            <input class="wiki-radio checkmark" type="radio" name="private" value="true"> Private
            <div class="devider"></div>
            <input class="wiki-radio" type="radio" name="private" value="false" checked> Public
          </div>
        <% } %>
        
        <button class="standard-button" type="submit">Create Wiki</button>
      </form>

    </main>
  </body>
</html>