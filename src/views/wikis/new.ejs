<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>

  <body>
    <% include ../static/partials/navbar.ejs %>
    <% include ../static/partials/userCard.ejs %>


    <main class="main-container">
      <% include ../static/partials/messages.ejs %>

      <h1>New Wiki</h1>

      <a href="/wikis">Back</a>

      <form action="/wikis/<%= currentUser.isPremium() || currentUser.isAdmin() ? 'createPrivate' : 'create' %>" method="post">
        <div>
          <label for="title">Wiki title</label>
          <input type="text" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>  
        <div>
          <label for="body">Wiki body</label>
          <input type="text" name="body" aria-describedby="bodyHelp" placeholder="Enter Body">
        </div>  
        <% if(currentUser.isPremium() || currentUser.isAdmin()){ %>
          <div>
            <label for="private">Make Wiki Private</label>
            <input type="radio" name="private" value="true"> Private
            <input type="radio" name="private" value="false" checked> Public
          </div>
        <% } %>
        
        <button type="submit">Submit</button>
      </form>

    </main>
  </body>
</html>